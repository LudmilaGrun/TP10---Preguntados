@{
    ViewData["Title"] = "Juego";
}

<div id="juego">
    <p>Nombre de usuario: @ViewBag.Username</p>
    <p>Puntaje actual: @ViewBag.Puntaje</p>

    @if (ViewBag.PreguntaActual.Foto != "")
    {
        <img src="@ViewBag.PreguntaActual.Foto" alt="Foto" />
    }

    <p>NÃºmero de pregunta: @ViewBag.PreguntaActual.Id</p>
    <p>@ViewBag.PreguntaActual.Enunciado</p>

    <form method="post" action='@Url.Action("VerificarRespuesta", "Home")'>
        @foreach (var respuesta in ViewBag.ListaRespuestas)
        {
            <div>
                <input type="radio" name="idRespuesta" value="@respuesta.IdRespuesta" />
                @respuesta.Contenido
                @if (respuesta.Foto != "")
                {
                    <img src="@respuesta.Foto" alt="Foto de la respuesta"/>
                }
            </div>
        }
        <button type="submit">Enviar Respuesta</button>
    </form>
</div>


